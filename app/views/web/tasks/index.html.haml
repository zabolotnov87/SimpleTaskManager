%legend Tasks
= form_tag tasks_path, method: :get do
  = select_tag :owner_id, options_from_collection_for_select(User.all, :id, :email, params[:owner_id]), prompt: 'all'
  = select_tag :state, options_for_select(Task.state_machine.states.map{|s| s.human_name}, params[:state]), prompt: 'all'
  %br
  = submit_tag t('.filter'), class: 'btn'

= link_to t('.create'), new_task_path, class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Name
      %th State
      %th Owner
      %th Created At
      %th
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to task.id, task_path(task)
        %td= link_to task.name, task_path(task)
        %td= state(task)
        %td= owner_name(task)
        %td= format_date(task.created_at)
        %td
          = link_to t('.edit'), edit_task_path(task), class: 'btn btn-mini'
          = link_to t('.delete'), task_path(task), method: :delete, class: 'btn btn-mini btn-danger'
