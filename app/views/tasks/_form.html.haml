= simple_form_for @task, wrapper: :controls, html: {class: 'form-horizontal'} do |f|
  .control-group
    = f.input :name
  .control-group  
    = f.input :user_id, label: 'Owner', collection: User.all.collect {|u| [u.email, u.id]}, 
      prompt: '<none>'
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to 'cancel', tasks_path, class: 'btn'
  