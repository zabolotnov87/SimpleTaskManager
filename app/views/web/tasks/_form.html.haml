= simple_form_for @task, html: {class: 'form-horizontal'} do |f|
  = f.input :name
  = f.input :user_id, label: 'Owner', collection: User.all.collect {|u| [u.email, u.id]}, 
      prompt: '<none>'
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel'), tasks_path, class: 'btn'
  